<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryDark">@color/PrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ErrorInfo">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/error</item>
    </style>

    <style name="LoadingInfo">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/loading</item>
    </style>

    <style name="DoneInfo">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/green</item>
    </style>

    <style name="PopupOverlay" parent="Theme.MaterialComponents.Light.DarkActionBar"/>
    <style name="AppBarOverlay" parent="Theme.MaterialComponents.Light.DarkActionBar"/>

</resources>