<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:orientation="vertical"
    tools:context=".SettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView_infoAccount"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/hello_blank_fragment"
            android:textColor="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_signInOut"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Sign out" />


    </LinearLayout>

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Options:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/switch1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:switchMinWidth="70dp"
            android:text="Save on google drive"
            android:textColor="@color/black" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView_DocCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Graphs:" />

    <TextView
        android:id="@+id/textView_DocSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Size:" />

    <Button
        android:id="@+id/button_cleanDocs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="clean" />

    <TextView
        android:id="@+id/textView_PicCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pictures: " />

    <TextView
        android:id="@+id/textView_PicSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Size:" />

    <Button
        android:id="@+id/button_cleanPicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="clean" />

</LinearLayout>