<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.pzpg.ogr.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_graphActivity"
            app:destination="@id/graphActivity" />
    </fragment>
    <fragment
        android:id="@+id/nav_history"
        android:name="com.pzpg.ogr.fragments.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/nav_library"
        android:name="com.pzpg.ogr.fragments.library.ItemGraphFragment"
        android:label="fragment_library"
        tools:layout="@layout/fragment_item_list" >
        <action
            android:id="@+id/action_nav_library_to_graphActivity"
            app:destination="@id/graphActivity" />
    </fragment>
    <activity
        android:id="@+id/graphActivity"
        android:name="com.pzpg.ogr.GraphActivity"
        android:label="activity_graph"
        tools:layout="@layout/activity_graph" />
</navigation>